# Production Environment Variables for Vercel Deployment
# Copy these settings to Vercel Environment Variables dashboard

# API Configuration
VITE_API_URL=https://your-domain.vercel.app/api
VITE_GEMINI_API_KEY=your_production_gemini_api_key

# MongoDB Connection (Required)
# Get your MongoDB connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/coaxia?retryWrites=true&w=majority

# JWT Secret (Required - Generate a secure random string)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_minimum_32_characters

# Server Configuration
PORT=5000
NODE_ENV=production
CLIENT_URL=https://your-domain.vercel.app
